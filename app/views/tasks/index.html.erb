<h1>Tasks</h1>

<%= link_to "Create a new task", "tasks/new" %>
<ol>
  <%# <li>Name - Details - Completed?</li> %>
  <% @tasks.each do |task| %>
    <%= link_to("tasks/#{task[:id]}") do %>
      <li><%= task.title %> - <%= task.details %> - <%= task.completed ? "Complete" : "Incomplete" %></li>
    <% end %> 
    <%= link_to "Edit task", "tasks/#{task.id}/edit" %> - <%= link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    <br>
    <br>
  <% end %>
</ol>

